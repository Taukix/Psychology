{% extends "base.html.twig" %}

{% block content %}
        <div class="w-100"></div>
            <section class="site-section" id="blog-section">
                    <div class="container" style="margin-top: 100px">
                        <div class="row justify-content-center mb-5 align-items-center">
                          <div class="col-md-8 text-center">
                            <h2 class="site-section-heading text-center">Blog</h2>
                          </div>
                        </div>

                        <div class="row">
                            {% for post in posts %}
                                {% if post.getState == 'Validé' %}
                                    <div class="col text-center p-4 ml-2" style="background-color: #25325b; border-radius: 30px;">
                                      <div class="h-entry">
                                        <h2 class="font-size-regular text-white">{{ post.title }}</h2>
                                        <div class="meta mb-4 text-white">{{ post.getPostUser.firstName }}{{ post.getPostUser.lastName }} <span class="mx-2">&bullet;</span>{{ post.getCreatedAt|date('d-m-Y à H:i') }}</div>
                                        <p class="text-white">{{ post.description }}</p>
                                        {% if post.getPostUser.getId == app.user.id or 'ROLE_ADMIN' in app.user.roles %}
                                            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-light px-4 py-2 btn-sm">Modifier</a>
                                            <a href="{{ path('app_post_delete', {'id': post.id}) }}" class="btn btn-danger px-4 py-2 btn-sm">Supprimer</a>
                                        {% endif %}
                                      </div> 
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>

                        <a href="{{path('app_post_create') }}" class="btn btn-primary px-4 py-2 btn-sm mt-3">Ajouter un Post</a>
                        
                        <div class="pagination row justify-content-center mb-5 mt-5 align-items-center">
                            {{ knp_pagination_render(posts) }}
                        </div>
                    </div>
            </section>
        </div>
{% endblock %}
