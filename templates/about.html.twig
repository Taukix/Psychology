{% extends "base.html.twig" %}

{% block body %}
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    <div class="site-wrap">
        <div class="w-100">
            <div class="site-section site-blocks-cover" id="about-section">
                <div class="container">
                    <div class="row mb-5 align-items-end mt-5 justify-content-center h-100">

                        <div class="col-md-5 ml-auto mb-5 order-md-2"  data-jarallax-element="50">
                          <img src="images/img_13.jpg" alt="Image" class="img-fluid rounded">
                        </div>
                        <div class="col-md-6 order-md-1"  data-jarallax-element="-50">

                          <div class="row">

                            <div class="col-12">
                              <div class="text-left pb-1">
                                <h2 class="site-section-heading">A Propos</h2>
                              </div>
                            </div>
                            <div class="col-12 mb-4">
