{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="mt-5 p-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if app.user %}
                    <div class="alert alert-dark" role="alert">
                        Vous êtes connecté en tant que {{ app.user.email }}.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <h1 class="h3 mb-3 font-weight-normal text-center mt-5">Connexion</h1>
    <div class="d-flex flex-column w-50 m-auto ">
    <label for="inputEmail" class="mt-3">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Adresse@mail.com" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword" class="mt-3">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control mb-3" placeholder="Mot de passe" autocomplete="current-password" required>
    
    <input type="hidden" name="_csrf_token"
       value="{{ csrf_token('authenticate') }}"
    >
    
    <button class="btn btn-lg btn-primary mt-4" type="submit">
        Se connecter
    </button>

    <div class="d-flex justify-content-start mt-3">
        <a href="{{ path('app_register') }}"><u>Pas encore inscrit ?</u></a>
    </div>
</form>
{% endblock %}
