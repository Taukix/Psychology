{% extends 'base.html.twig' %}

{% block content %}
    <div class="w-100">
            <section class="site-section" id="blog-section">
                    <div class="container" style="margin-top: 100px">
                      <div class="row justify-content-center mb-5 align-items-center">
                        <div class="col-md-8 text-center">
                          <h2 class="site-section-heading text-center">Prenez votre Rendez-vous</h2>
                        </div>
                      </div>
                      <div class="row justify-content-center">
                        <div id="calendar"></div>
                        <a href="{{ path('app_rdv_create') }}" class="btn btn-primary mt-3">Prendre son Rendez-Vous</a>
                      </div>
                    </div>
            </section>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'timeGridWeek',
            locale: 'fr',
            timezone: 'Europe/Paris',
            titleFormat: {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
              weekday: 'long'
            },
            headerToolbar: {
              left: 'prev,next',
              center: 'title',
              right: 'timeGridWeek,timeGridDay' // user can switch between the two
            },
            buttonText: {
              today: 'Aujourd\'hui',
              month: 'Mois',
              week: 'Semaine',
              day: 'Jour',
              list: 'Liste'
            },
            selectable: true,
            weekends: false,
            allDaySlot: false,
            slotMinTime: '08:00:00',
            slotMaxTime: '19:00:00',
            slotDuration: '01:00:00',
            slotLabelInterval: '01:00:00',
            slotLabelFormat: {
              hour: 'numeric',
              minute: '2-digit',
              omitZeroMinute: false,
              meridiem: 'short'
            },
            height: 'auto',
            slotLabelContent: function(arg) {
                var hour = arg.date.getHours();
                if (hour === 12) {
                    return null; 
                } else {
                    return arg.text;
                }
            },
            events: {{ data|raw }},
            eventClick: function(info) {
              info.jsEvent.preventDefault();
              window.location.href = info.event.url;
            }
        });
        calendar.render();
      });

    </script>
{% endblock %}
